page {
  font-family: "微软雅黑";
  background: #f5f5f5;
  padding-bottom: 150rpx;
}

.detailtop {
  height: 360rpx;
  background: #fff;
  text-align: center;
  background: url(http://www.jibuu.cn/ImgServer/wx/bg.jpg) no-repeat top center;
  background-size: cover;
}

.detailtoppic image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 3px solid #f38815;
  margin-top: 50rpx;
}

.indexbom{width:95%;margin: 0 auto;}
.indexbom image {
  width: 100%;
  height: 240rpx;
  margin:1% 1%;
 
}

.indexbomli{ width: 48%;
  height: 240rpx;
  margin:1% 1%; float:left;}

.indexbom-tit{border-left:3px solid #f38815;width:93%;height:30rpx;margin:20rpx auto;font-size:30rpx;color: #424242;line-height:30rpx;text-indent:10px;}
.indextop{width:95%;text-align:left;font-size:24rpx;color:#fff;background:url(/imgs/mjbg.png) repeat-x top left;background-size:20rpx auto;margin:0 auto;padding-top:20rpx;margin-top:60rpx;}
.indextopSpan{display:inline-block;text-align:center;width:40rpx;height:40rpx;border-radius:5px;background:#3ba2f9; font-size:24rpx;color:#fff;line-height:40rpx;}

.detailtoptit {
  font-size: 30rpx;
  color: #fff;
  margin-top: 10rpx;
}

.detailtopstate {
  font-size: 36rpx;
  color: #4a4a4a;
  font-weight: bold;
  margin-top: 10rpx;
}

.detaillist {
  background: #fff;
  margin-top: 30rpx;
  padding: 30rpx 0 0;
}

.detaillist .table {
  width: 100%;
  font-size: 30rpx;
  color: #606060;
  text-align: center;
  border-bottom: 1px solid #e8e8e8;
}

.tr {
  display: flex;
  padding: 15rpx 20rpx;
}

.th, .td {
  border: 0;
  width: 100%;
}

.ordername {
  width: 70%;
  text-align: left;
}

.ordernum {
  width: 15%;
}

.orderprice {
  width: 15%;
  text-align: right;
}

.trbom {
  display: flex;
  padding: 15rpx 20rpx;
}

.tdbomtit {
  text-align: left;
  width: 85%;
  font-size: 28rpx;
}

.tdbomprice {
  text-align: right;
  width: 15%;
  color: #f38815;
}

.tabletotal {
  font-size: 36rpx;
  color: #f38815;
  text-align: right;
  padding: 20rpx;
}

.detailinfo {
  background: #fff;
  margin-top: 30rpx;
  padding: 20rpx 20rpx 30rpx;
  font-size: 30rpx;
  color: #606060;
}

.detailtit {
  padding: 15rpx 0;
  font-size: 30rpx;
  font-weight: bold;
}

.detailtxt {
  padding: 5rpx 0;
}
