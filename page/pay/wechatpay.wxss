/* page/pay/wechatpay.wxss */
page {
  font-family: "微软雅黑";
  background: #f5f5f5;
  padding-bottom: 150rpx;
}


.address{font-size:30rpx;color:#606060;height:150rpx;background: #fff url(http://www.jibuu.cn/ImgServer/wx/bottom.jpg) repeat-x bottom;background-size:auto 1px}
.location{width:80%;margin-left:20rpx;padding-left:50rpx;height:150rpx;float:left;background:url(http://www.jibuu.cn/ImgServer/wx/loca.jpg) no-repeat left center;background-size:auto 50rpx}
.locationL{width:10%;height:150rpx;float:right;background:url(http://www.jibuu.cn/ImgServer/wx/kh.jpg) no-repeat center;background-size:auto 30rpx}
.lotit{font-size:30rpx;color:#4a4a4a;margin-top:38rpx}
.lotxt{font-size:24rpx;color:#a4a4a4;margin-top:5rpx}

.paytype{background:#fff;padding:30rpx 20rpx;margin-top:30rpx;font-size:30rpx;color:#4a4a4a;}

.detaillist{background: #fff;margin-top:30rpx;padding:30rpx 0 0}
.detaillist .table{width: 100%;font-size:30rpx;color:#606060;text-align: center;border-bottom:1px solid #e8e8e8}
.tr{display: flex;padding:15rpx 20rpx;}
.th,.td{border:0;width:100%;}
.ordername{width:70%;text-align: left}
.ordernum{width:15%;}
.orderprice{width:15%;text-align: right}
.trbom{display: flex;padding:15rpx 20rpx;}
.tdbomtit{text-align: left;width:85%;font-size:28rpx;}
.tdbomprice{text-align: right;width:15%;color:#f38815}
.tabletotal0{font-size:30rpx;color:#4a4a4a;text-align: right;padding:20rpx;}
.tabletotal1{display:inline;font-size:30rpx;color:#606060;margin-right:10px}
.tabletotal2{display:inline;font-size:30rpx;color:#606060;margin-right:10px}
.tabletotal3{display:inline;font-size:36rpx;color:#f38815;}

.paybom{
position:fixed;
left:0;
bottom:0;
width:100%;
height:100rpx;
background:#3c3d41;
z-index:999999;
}

.paybtn{

width:200rpx;
height:100%;
font-size:30rpx;
background:#f38815;
color:#fff;
line-height:100rpx;
border-radius:0;
float:right;
display: inline-block;
}

.paybom1{font-size:30rpx;color:#fff;display: inline-block;float:left;line-height:100rpx;margin-left:10px}
.paybom2{font-size:24rpx;color:#eee;display: inline-block;float:left;line-height:100rpx;margin-left:5px}